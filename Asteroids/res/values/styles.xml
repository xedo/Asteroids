<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    <style name="MiTema"
        parent="@android:style/Theme.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0F0</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <style name="TemaAsteroides"
        parent="@android:style/Theme.NoTitleBar"></style>
    
    <style name="MiEstilo"
        parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#0F0</item>
        <item name="android:typeface">monospace</item>
    </style>
    
    <style name="MiEstilo.grande">
        <item name="android:textSize">18pt</item>
    </style>
    
    <style name="MiEstilo.grande.negrita">
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextoAsteroides">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22pt</item>
        <item name="android:textColor">#00bb00</item>
    </style>
    
    <style name="TextoAsteroides.Botones">
        <item name="android:padding">5pt</item>
        <item name="android:textSize">8pt</item>
    </style>

</resources>